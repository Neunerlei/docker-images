name: PHP (legacy)
on:
  push:
    branches: [ "main" ]
    paths:
      - src/php/**
  schedule:
    - cron: '0 4 * * 0,3'
  workflow_dispatch:

jobs:
  buildAndPushDebian:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v1

      - name: Login to DockerHub Registry
        run: echo ${{ secrets.DOCKERHUB_PASSWORD }} | docker login -u ${{ secrets.DOCKERHUB_USERNAME }} --password-stdin

      - name: Build and push
        run: bin/discover-and-build.sh php library php --type=fpm-debian --source-image-type=fpm --precision=2 --last-version=8.5 --push-with-latest

  buildAndPushAlpine:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v1

      - name: Login to DockerHub Registry
        run: echo ${{ secrets.DOCKERHUB_PASSWORD }} | docker login -u ${{ secrets.DOCKERHUB_USERNAME }} --password-stdin

      - name: Build and push
        run: bin/discover-and-build.sh php library php --type=fpm-alpine --source-image-type=fpm-alpine --precision=2 --last-version=8.4 --push

  workflow-keepalive:
    if: github.event_name == 'schedule'
    runs-on: ubuntu-latest
    permissions:
      actions: write
    steps:
      - uses: liskin/gh-workflow-keepalive@v1
